<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - wishlistWebsite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/wishlistWebsite.styles.css" asp-append-version="true" />
    
    <style>
        /* Set the background to a very light gray */
        body {
            background-color: #f2f2f2;  /* Very light gray background */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;  /* Ensure the body takes the full height */
            margin: 0;
        }

        /* Center the main content */
        main {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            height: 100%;
        }

        /* Style the input field as a line instead of a box */
        input{
            border: none;
            border-bottom: 2px solid #333;  /* Border at the bottom to give a line effect */
            padding: 8px;
            margin-bottom: 16px;
            width: 100%;
            font-size: 1rem;
            background-color: transparent;
        }

        input:focus {
            outline: none;
            border-bottom-color: #007bff;  /* Change the line color to blue when focused */
        }

        /* Optional: Style for button (if you want a consistent look) */
        button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1rem;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <main role="main" class="pb-3">
        @RenderBody()  <!-- This is where the page content will be rendered -->
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
